{
  "schemaVersion": 1,
  "id": "supercraft",
  "version": "${version}",

  "name": "Supercraft Mod",
  "description": "This is an example description! Tell everyone what your mod is about!",
  "authors": [
    "Christopher Lewis"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/supercraft/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.christopher.supercraft.Supercraft"
    ],
    "client": [
      "com.christopher.supercraft.client.ZoomFeature"
    ]
  },
  "mixins": [
    {
      "config": "supercraft.client-mixins.json",
      "environment": "client"
    }
  ],
  "accessWidener": "supercraft.accesswidener",
  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
